<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/productIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/_4sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCode"
        style="@style/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="(8900) - "
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/productIv"
        app:layout_constraintTop_toTopOf="@+id/productIv" />

    <TextView
        android:id="@+id/tvName"
        style="@style/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Product name"
        app:layout_constraintStart_toEndOf="@+id/tvCode"
        app:layout_constraintTop_toTopOf="@+id/productIv" />

    <TextView
        android:id="@+id/tvManufacturer"
        style="@style/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Mea. ltd"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/productIv"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvUnits"
        style="@style/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="1200"
        app:layout_constraintStart_toEndOf="@+id/productIv"
        app:layout_constraintTop_toBottomOf="@+id/tvManufacturer" />

    <TextView
        android:id="@+id/tvUnitsText"
        style="@style/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:gravity="center"
        android:text="Units"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/tvUnits"
        app:layout_constraintBottom_toBottomOf="@+id/tvUnits"
        app:layout_constraintTop_toTopOf="@+id/tvUnits" />

    <TextView
        android:id="@+id/tvRestock"
        style="@style/productName"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:gravity="center"
        tools:text="Restock @ 100 (-12)"
        android:textColor="@color/gray"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvUnits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvUnitsText"
        app:layout_constraintTop_toTopOf="@+id/tvUnits" />
<View
    android:layout_width="match_parent"
    android:layout_height=".3dp"
    android:background="@color/gray"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
